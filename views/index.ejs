<html>
  <head>
    <title>RedisTasks</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <style>
      .del:checked + span {
        color: red;
      }
      .task-list {
        list-style: none;
      }
      .margintop1 {
        margin-top: 1rem;
      }
      h1 {
        margin-bottom: 2rem;
        margin-top: 2rem;
      }
      h3 {
        margin-bottom: 1.5rem;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">RedisTasks</a>
    </nav>

    <div class="container">
      <h1>Task List</h1>

      <form method="post" action="/task/add">
        <label>Add Task</label>
        <input
          type="text"
          name="task"
          placeholder="Add Task"
          class="form-control"
        />
        <input class="btn btn-primary margintop1" type="submit" value="Submit" />
      </form>

      <form method="post" action="/task/delete">
        <ul class="list-group">
          <% tasks.forEach((task, i) => { %>
          <li class="list-group-item">
            <div class="form-check">
              <input
                type="checkbox"
                name="tasks"
                id="checkbox<%= i %>"
                class="del form-check-input"
                value="<%= task %>"
              />
              <label class="form-check-label" for="checkbox<%= i %>"><%=task %></label>
            </div>
            </label>
          </li>
          <% }) %>
        </ul>

        <input class="btn btn-primary margintop1" type="submit" value="Remove" style="margin-top:1rem" />
      </form>

      <div class="card card-body bg-light">
        <h3>Next Business Call</h3>
        Name: <%= call.name %><br />
        Company: <%= call.company %><br />
        Phone: <%= call.phone %><br />
        Time: <%= call.time %><br />
      </div>

      <br />
      <div class="card card-body bg-light">
        <h3>Edit Next Call</h3>
        <form method="post" action="/call/add">
          <div class="form-group">
            <label for="name">Contact Name</label><br />
            <input
              type="text"
              name="name"
              placeholder="Task Name"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="company">Company</label><br />
            <input
              type="text"
              name="company"
              placeholder="Company"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="phone">Phone</label><br />
            <input
              type="tel"
              name="phone"
              placeholder="Phone"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="time">Day & Time</label><br />
            <input
              type="text"
              name="time"
              placeholder="Time"
              class="form-control"
            />
          </div>
          <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
      </div>
    </div>
  </body>
</html>
